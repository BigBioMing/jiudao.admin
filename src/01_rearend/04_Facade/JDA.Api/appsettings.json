          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] [{CurrentScopeId}] {Message:lj} <s:{SourceContext}>{NewLine}{Exception}",
          "rollingInterval": "Day",
          "rollOnFileSizeLimit": true,
          "shared": true,
          "fileSizeLimitBytes": 10485760
        }
